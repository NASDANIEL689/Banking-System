<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.saintdanielbank.AccountCreateController" prefWidth="600" prefHeight="500">
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>
            
            <Label text="Create New Account" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            
            <VBox spacing="15" alignment="CENTER_LEFT" prefWidth="400">
                <Label text="Choose Account Type:" style="-fx-font-weight: bold;" />
                <ChoiceBox fx:id="accountTypeChoice" prefWidth="400" />
                
                <Label text="Account Number:" />
                <TextField fx:id="accountNumberField" promptText="Enter account number" prefWidth="400" />
                
                <VBox fx:id="savingsFields" spacing="10">
                    <Label text="Initial Deposit:" />
                    <TextField fx:id="savingsDepositField" promptText="Enter deposit amount" prefWidth="400" />
                </VBox>
                
                <VBox fx:id="investmentFields" spacing="10" visible="false">
                    <Label text="Initial Deposit (Minimum P500):" />
                    <TextField fx:id="investmentDepositField" promptText="Enter deposit amount (min P500)" prefWidth="400" />
                </VBox>
                
                <VBox fx:id="chequeFields" spacing="10" visible="false">
                    <Label fx:id="employerLabel" text="Employer Name (for Individual customers):" />
                    <TextField fx:id="employerField" promptText="Enter employer name" prefWidth="400" />
                    <Label text="Initial Deposit (optional):" />
                    <TextField fx:id="chequeDepositField" promptText="Enter deposit amount" prefWidth="400" />
                </VBox>
            </VBox>
            
            <HBox spacing="10" alignment="CENTER">
                <Button text="Create Account" onAction="#onCreate" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" />
                <Button text="Cancel" onAction="#onCancel" style="-fx-background-color: #ccc; -fx-pref-width: 100;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
