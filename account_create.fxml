<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.saintdanielbank.AccountCreateController" spacing="8" padding="10">
    <Label text="Create Account" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="30" />
            <ColumnConstraints percentWidth="70" />
        </columnConstraints>
        <children>
            <Label text="Customer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="customerIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Account Number:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="accountNumberField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Type:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ChoiceBox fx:id="accountTypeChoice" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Initial Deposit:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="initialDepositField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </children>
    </GridPane>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Create" onAction="#onCreate" />
        <Button text="Cancel" onAction="#onCancel" />
    </HBox>
</VBox>
