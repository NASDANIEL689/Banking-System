<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
            <Label text="Account Statement" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <HBox spacing="20">
                <Label text="Account Number:" />
                <Label fx:id="accountNumberLabel" style="-fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Current Balance:" />
                <Label fx:id="balanceLabel" style="-fx-font-weight: bold; -fx-text-fill: #1E3C72; -fx-font-size: 16px;" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="transactionsTable" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="200" />
                <TableColumn fx:id="typeColumn" text="Transaction Type" prefWidth="150" />
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="150" />
                <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="150" />
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
            <Button text="Back to Dashboard" onAction="#onBack" style="-fx-background-color: #1E3C72; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;" />
        </HBox>
    </bottom>
</BorderPane>


