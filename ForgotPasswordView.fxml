<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bankapp.ForgotPasswordController"
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #0d47a1);">

    <children>

        <!-- Centered VBox (Main Card) -->
        <VBox alignment="CENTER" spacing="20" prefWidth="450" prefHeight="400"
              AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
              AnchorPane.leftAnchor="75" AnchorPane.rightAnchor="75"
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 10, 0, 0, 5);">

            <!-- Bank Title -->
            <VBox alignment="CENTER">
                <Label text="SAINT DANIEL BANK"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0d47a1;" />
                <Label text="Password Recovery"
                       style="-fx-font-size: 13px; -fx-text-fill: #444;" />
            </VBox>

            <!-- Spacer -->
            <Region prefHeight="10" />

            <!-- Instructions -->
            <Label text="Enter your email address and we'll send you a link to reset your password."
                   style="-fx-text-fill: #666; -fx-font-size: 14px; -fx-wrap-text: true; -fx-text-alignment: center;"
                   prefWidth="350" />

            <!-- Email Field -->
            <VBox spacing="5" prefWidth="350">
                <Label text="Email Address *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                <TextField fx:id="emailField" promptText="Enter your email address"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
            </VBox>

            <!-- Username Field (Optional) -->
            <VBox spacing="5" prefWidth="350">
                <Label text="Username (Optional)" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                <TextField fx:id="usernameField" promptText="Enter your username (if you remember)"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
            </VBox>

            <!-- Security Question (Optional) -->
            <VBox spacing="5" prefWidth="350">
                <Label text="Security Question (Optional)" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                <ComboBox fx:id="securityQuestionComboBox" promptText="Select a security question"
                          style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
            </VBox>

            <!-- Security Answer -->
            <VBox spacing="5" prefWidth="350">
                <Label text="Security Answer" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                <TextField fx:id="securityAnswerField" promptText="Enter your security answer"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
            </VBox>

            <!-- Send Reset Link Button -->
            <Button text="Send Reset Link" fx:id="sendResetButton"
                    style="-fx-background-color: #0d47a1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30 10 30; -fx-font-size: 16px;"
                    onAction="#handleSendReset" />

            <!-- Status Message -->
            <Label fx:id="statusMessageLabel" text=""
                   style="-fx-text-fill: #666; -fx-font-size: 12px; -fx-wrap-text: true; -fx-text-alignment: center;"
                   prefWidth="350" />

            <!-- Back to Login Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Remember your password?" style="-fx-text-fill: #444;" />
                <Hyperlink text="Back to Login"
                           fx:id="backToLoginLink"
                           onAction="#handleBackToLogin"
                           style="-fx-text-fill: #0d47a1; -fx-font-weight: bold;" />
            </HBox>

        </VBox>

    </children>
</AnchorPane>
