<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bankapp.DepositController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #0d47a1);">

    <children>
        <!-- Top Navigation Bar -->
        <HBox alignment="CENTER_LEFT" spacing="20" prefHeight="60"
              style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 10 20 10 20;"
              AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <Button text="â† Back to Menu" fx:id="backButton"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-background-radius: 5; -fx-border-radius: 5;"
                        onAction="#handleBack" />
                <Label text="Make a Deposit" 
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            </children>
        </HBox>

        <!-- Main Content Area -->
        <VBox spacing="30" alignment="CENTER" 
              AnchorPane.topAnchor="80" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

            <!-- Account Balance Card -->
            <VBox alignment="CENTER" spacing="10" prefWidth="400" prefHeight="120"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 10, 0, 0, 5);">
                <Label text="Current Balance" style="-fx-text-fill: #666; -fx-font-size: 14px;" />
                <Label fx:id="currentBalanceLabel" text="$0.00" 
                       style="-fx-text-fill: #0d47a1; -fx-font-size: 32px; -fx-font-weight: bold;" />
                <Label fx:id="accountNumberLabel" text="Account: ****1234" 
                       style="-fx-text-fill: #888; -fx-font-size: 12px;" />
            </VBox>

            <!-- Deposit Form -->
            <VBox alignment="CENTER" spacing="20" prefWidth="500" prefHeight="350"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 10, 0, 0, 5);">

                <Label text="Deposit Details" style="-fx-text-fill: #333; -fx-font-size: 18px; -fx-font-weight: bold;" />

                <!-- Deposit Method Selection -->
                <VBox spacing="10" prefWidth="440">
                    <Label text="Deposit Method *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <RadioButton fx:id="cashRadioButton" text="Cash" selected="true" 
                                     style="-fx-text-fill: #333;" />
                        <RadioButton fx:id="checkRadioButton" text="Check" 
                                     style="-fx-text-fill: #333;" />
                        <RadioButton fx:id="transferRadioButton" text="Bank Transfer" 
                                     style="-fx-text-fill: #333;" />
                    </HBox>
                </VBox>

                <!-- Amount Input -->
                <VBox spacing="10" prefWidth="440">
                    <Label text="Amount *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="$" style="-fx-text-fill: #333; -fx-font-size: 18px; -fx-font-weight: bold;" />
                        <TextField fx:id="amountField" promptText="0.00" prefWidth="200"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1; -fx-font-size: 16px;" />
                    </HBox>
                </VBox>

                <!-- Quick Amount Buttons -->
                <VBox spacing="10" prefWidth="440">
                    <Label text="Quick Amount" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="$50" fx:id="quick50Button" prefWidth="80"
                                style="-fx-background-color: #E3F2FD; -fx-text-fill: #0d47a1; -fx-background-radius: 5;"
                                onAction="#handleQuickAmount" />
                        <Button text="$100" fx:id="quick100Button" prefWidth="80"
                                style="-fx-background-color: #E3F2FD; -fx-text-fill: #0d47a1; -fx-background-radius: 5;"
                                onAction="#handleQuickAmount" />
                        <Button text="$200" fx:id="quick200Button" prefWidth="80"
                                style="-fx-background-color: #E3F2FD; -fx-text-fill: #0d47a1; -fx-background-radius: 5;"
                                onAction="#handleQuickAmount" />
                        <Button text="$500" fx:id="quick500Button" prefWidth="80"
                                style="-fx-background-color: #E3F2FD; -fx-text-fill: #0d47a1; -fx-background-radius: 5;"
                                onAction="#handleQuickAmount" />
                    </HBox>
                </VBox>

                <!-- Description -->
                <VBox spacing="10" prefWidth="440">
                    <Label text="Description (Optional)" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                    <TextField fx:id="descriptionField" promptText="Enter description for this deposit"
                               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                </VBox>

                <!-- Deposit Button -->
                <Button text="Process Deposit" fx:id="depositButton"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 12 40 12 40; -fx-font-size: 16px;"
                        onAction="#handleDeposit" />

            </VBox>

            <!-- Recent Deposits -->
            <VBox alignment="CENTER" spacing="10" prefWidth="500" prefHeight="150"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 10, 0, 0, 5);">
                
                <Label text="Recent Deposits" style="-fx-text-fill: #333; -fx-font-size: 16px; -fx-font-weight: bold;" />
                
                <TableView fx:id="recentDepositsTable" prefHeight="80" prefWidth="460">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100" />
                        <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100" />
                        <TableColumn fx:id="methodColumn" text="Method" prefWidth="100" />
                        <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="160" />
                    </columns>
                </TableView>
            </VBox>

        </VBox>

    </children>
</AnchorPane>
