<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bankapp.SignUpController"
            prefWidth="700" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #0d47a1);">

    <children>
        <!-- ScrollPane for the form -->
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
            
            <VBox alignment="CENTER" spacing="20" prefWidth="600" prefHeight="550"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 10, 0, 0, 5);">

                <!-- Bank Title -->
                <VBox alignment="CENTER">
                    <Label text="SAINT DANIEL BANK"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0d47a1;" />
                    <Label text="Create Your Account"
                           style="-fx-font-size: 13px; -fx-text-fill: #444;" />
                </VBox>

                <!-- Form Fields in Grid -->
                <GridPane hgap="20" vgap="15" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="250" />
                        <ColumnConstraints prefWidth="250" />
                    </columnConstraints>

                    <!-- First Name -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="First Name *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <TextField fx:id="firstNameField" promptText="Enter first name"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Last Name -->
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Last Name *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <TextField fx:id="lastNameField" promptText="Enter last name"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Email -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Email *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <TextField fx:id="emailField" promptText="Enter email address"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Phone -->
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="Phone Number *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <TextField fx:id="phoneField" promptText="Enter phone number"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Username -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="Username *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <TextField fx:id="usernameField" promptText="Choose username"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Account Type -->
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Label text="Account Type *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <ComboBox fx:id="accountTypeComboBox" promptText="Select account type"
                                  style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Password -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                        <Label text="Password *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <PasswordField fx:id="passwordField" promptText="Create password"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Confirm Password -->
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <Label text="Confirm Password *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                    <!-- Address -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                        <Label text="Address *" style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                        <TextField fx:id="addressField" promptText="Enter your address"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #90caf9; -fx-border-width: 1;" />
                    </VBox>

                </GridPane>

                <!-- Terms and Conditions -->
                <HBox alignment="CENTER_LEFT" spacing="5" prefWidth="520">
                    <CheckBox fx:id="termsCheckbox" />
                    <Label text="I agree to the Terms and Conditions" style="-fx-text-fill: #333;" />
                </HBox>

                <!-- Sign Up Button -->
                <Button text="Create Account" fx:id="signUpButton"
                        style="-fx-background-color: #0d47a1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 40 10 40; -fx-font-size: 16px;"
                        onAction="#handleSignUp" />

                <!-- Sign In Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" style="-fx-text-fill: #444;" />
                    <Hyperlink text="Sign In Here"
                               fx:id="signInLink"
                               onAction="#handleSignIn"
                               style="-fx-text-fill: #0d47a1; -fx-font-weight: bold;" />
                </HBox>

            </VBox>
        </ScrollPane>
    </children>
</AnchorPane>
