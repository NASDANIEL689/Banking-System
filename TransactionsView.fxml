<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bankapp.TransactionsController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #0d47a1);">

    <children>
        <!-- Top Navigation Bar -->
        <HBox alignment="CENTER_LEFT" spacing="20" prefHeight="60"
              style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 10 20 10 20;"
              AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <Button text="← Back to Menu" fx:id="backButton"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-background-radius: 5; -fx-border-radius: 5;"
                        onAction="#handleBack" />
                <Label text="All Transactions" 
                       style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            </children>
        </HBox>

        <!-- Main Content Area -->
        <VBox spacing="20" alignment="CENTER" 
              AnchorPane.topAnchor="80" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

            <!-- Filter and Search Controls -->
            <HBox alignment="CENTER_LEFT" spacing="20" prefWidth="1160">
                <VBox spacing="5">
                    <Label text="Filter by Type:" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    <ComboBox fx:id="typeFilterComboBox" promptText="All Types" prefWidth="150"
                              style="-fx-background-radius: 5;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Date From:" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    <DatePicker fx:id="dateFromPicker" prefWidth="150" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Date To:" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    <DatePicker fx:id="dateToPicker" prefWidth="150" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Search:" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                    <TextField fx:id="searchField" promptText="Search transactions..." prefWidth="200"
                               style="-fx-background-radius: 5;" />
                </VBox>
                
                <VBox spacing="5">
                    <Region prefHeight="25" />
                    <Button text="Apply Filters" fx:id="applyFiltersButton"
                            style="-fx-background-color: #0d47a1; -fx-text-fill: white; -fx-background-radius: 5;"
                            onAction="#handleApplyFilters" />
                </VBox>
                
                <VBox spacing="5">
                    <Region prefHeight="25" />
                    <Button text="Clear" fx:id="clearFiltersButton"
                            style="-fx-background-color: #666; -fx-text-fill: white; -fx-background-radius: 5;"
                            onAction="#handleClearFilters" />
                </VBox>
            </HBox>

            <!-- Transactions Table -->
            <VBox alignment="CENTER" spacing="10" prefWidth="1160" prefHeight="600"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 10, 0, 0, 5);">
                
                <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="1120">
                    <Label text="Transactions" style="-fx-text-fill: #333; -fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Label fx:id="transactionCountLabel" text="(0 transactions)" 
                           style="-fx-text-fill: #666; -fx-font-size: 14px;" />
                </HBox>
                
                <TableView fx:id="transactionsTable" prefHeight="500" prefWidth="1120">
                    <columns>
                        <TableColumn fx:id="transactionIdColumn" text="ID" prefWidth="80" />
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="120" />
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="100" />
                        <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120" />
                        <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="120" />
                        <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                        <TableColumn fx:id="referenceColumn" text="Reference" prefWidth="120" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100" />
                    </columns>
                </TableView>
                
                <!-- Pagination Controls -->
                <HBox alignment="CENTER" spacing="10">
                    <Button text="← Previous" fx:id="previousPageButton"
                            style="-fx-background-color: #666; -fx-text-fill: white; -fx-background-radius: 5;"
                            onAction="#handlePreviousPage" />
                    <Label fx:id="pageInfoLabel" text="Page 1 of 1" 
                           style="-fx-text-fill: #333; -fx-font-weight: bold;" />
                    <Button text="Next →" fx:id="nextPageButton"
                            style="-fx-background-color: #666; -fx-text-fill: white; -fx-background-radius: 5;"
                            onAction="#handleNextPage" />
                </HBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="20">
                <Button text="Export to CSV" fx:id="exportButton"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20 8 20;"
                        onAction="#handleExport" />
                <Button text="Print Statement" fx:id="printButton"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20 8 20;"
                        onAction="#handlePrint" />
                <Button text="Refresh" fx:id="refreshButton"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20 8 20;"
                        onAction="#handleRefresh" />
            </HBox>

        </VBox>

    </children>
</AnchorPane>
