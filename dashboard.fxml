<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.saintdanielbank.DashboardController" prefWidth="900" prefHeight="700">
    <top>
        <VBox>
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <VBox spacing="4" alignment="CENTER_LEFT">
                    <Label fx:id="welcomeLabel" text="Welcome, [username]" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label fx:id="totalBalanceLabel" text="Total Balance: P0.00" style="-fx-font-size: 16px; -fx-text-fill: #1E3C72; -fx-font-weight: bold;" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Logout" onAction="#onLogout" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="15" style="-fx-background-color: #f5f5f5;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                
                <Label text="Your Accounts" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                
                <VBox fx:id="accountsContainer" spacing="15">
                    <!-- Account cards will be added here dynamically -->
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
            <Button text="Transfer Between Accounts" onAction="#onTransferBetweenAccounts" style="-fx-background-color: #0d47a1; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-pref-width: 230;" />
            <Button text="Create New Account" onAction="#onCreateAccount" style="-fx-background-color: #1E3C72; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-pref-width: 200;" />
        </HBox>
    </bottom>
</BorderPane>
