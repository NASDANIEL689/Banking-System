<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="500" prefHeight="300">
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>
            
            <Label text="Deposit" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Account Number:" />
                <Label fx:id="accountNumberLabel" style="-fx-font-weight: bold;" />
                
                <Label text="Current Balance:" />
                <Label fx:id="balanceLabel" style="-fx-font-weight: bold; -fx-text-fill: #1E3C72;" />
                
                <Label text="Amount:" />
                <TextField fx:id="amountField" promptText="Enter amount" prefWidth="200" />
            </VBox>
            
            <HBox spacing="10" alignment="CENTER">
                <Button text="Confirm Deposit" onAction="#onConfirmDeposit" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" />
                <Button text="Cancel" onAction="#onCancel" style="-fx-background-color: #ccc; -fx-pref-width: 100;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>


